= render :partial => 'manage/menu'

#manage
  = simple_form_for @site, :url => "", :html => { :class => 'single-column' } do |f|
    .left-column
      = f.input :name, :label => t('site.name'), :disabled => true
      = f.input :description, :label => t('site.description'), :as => :text, :input_html => { :rows => 5 }, :disabled => true
      = f.input :domain, :label => t('site.domain'), :disabled => true
      = f.input :locale, :label => t('site.locale'), :collection => I18n.available_locales, :disabled => true
      = f.input :timezone, :label => t('site.timezone'), :as => :time_zone, :disabled => true
      = f.input :signature, :label => t('site.signature'), :as => :text, :input_html => { :rows => 5 }, :disabled => true
      = f.input :ssl, :label => t('site.ssl'), :as => :boolean, :disabled => true
      = f.input :feedback_url, :label => t('site.feedback_url'), :disabled => true
      = f.input :analytics_code, :label => t('site.analytics_code'), :disabled => true
      = f.input :shib_enabled, :label => t('site.shib_enabled'), :as => :boolean, :disabled => true
      = f.input :shib_email_field, :label => t('site.shib_email_field'), :disabled => true
      = f.input :shib_name_field, :label => t('site.shib_name_field'), :disabled => true
      = f.input :ldap_enabled, :label => t('site.ldap_enabled'), :disabled => true
      = f.input :ldap_host, :label => t('site.ldap_host'), :disabled => true
      = f.input :ldap_port, :label => t('site.ldap_port'), :disabled => true
      = f.input :ldap_user, :label => t('site.ldap_user'), :disabled => true
      = f.input :ldap_user_password, :label => t('site.ldap_user_password'), :disabled => true
      = f.input :ldap_user_treebase, :label => t('site.ldap_user_treebase'), :disabled => true
      = f.input :ldap_username_field, :label => t('site.ldap_username_field'), :disabled => true
      = f.input :ldap_email_field, :label => t('site.ldap_email_field'), :disabled => true
      = f.input :ldap_name_field, :label => t('site.ldap_name_field'), :disabled => true
    .right-column
      = f.input :smtp_login, :label => t('site.smtp_login'), :disabled => true
      = f.input :smtp_password, :label => t('site.smtp_password'), :disabled => true
      = f.input :smtp_sender, :label => t('site.smtp_sender'), :disabled => true
      = f.input :smtp_domain, :label => t('site.smtp_domain'), :disabled => true
      = f.input :smtp_server, :label => t('site.smtp_server'), :disabled => true
      = f.input :smtp_port, :label => t('site.smtp_port'), :disabled => true
      = f.input :smtp_use_tls, :label => t('site.smtp_use_tls'), :disabled => true
      = f.input :smtp_auto_tls, :label => t('site.smtp_auto_tls'), :disabled => true
      = f.input :smtp_auth_type, :label => t('site.smtp_auth_type'), :disabled => true
      = f.input :exception_notifications, :label => t('site.exception_notifications'), :as => :boolean, :disabled => true
      = f.input :exception_notifications_email, :label => t('site.exception_notifications_email'), :disabled => true
      = f.input :exception_notifications_prefix, :label => t('site.exception_notifications_prefix'), :disabled => true
      = f.input :chat_enabled, :label => t('site.chat_enabled'), :as => :boolean, :disabled => true
      = f.input :presence_domain, :label => t('site.chat_domain_field'), :disabled => true
      = f.input :xmpp_server, :label => t('site.chat_server_field'), :disabled => true
      = f.input :external_help, :label => t('site.external_help'), :disabled => true
    .form-actions
      = link_to t('button.edit'), edit_site_path, :class => "btn btn-primary"
